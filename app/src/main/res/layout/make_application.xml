<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_name"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_surname"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_name"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_personal_code"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_surname"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_email"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_personal_code"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_phone"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_email"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_address"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_phone"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_motivation_letter"
        android:padding="4dp"
        android:text="Motivācijas vēstule:"
        app:layout_constraintTop_toBottomOf="@id/application_vacancy_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/application_vacancy_title"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/application_address"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/letter_et"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/application_vacancy_title"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pievienot CV"
        app:layout_constraintTop_toBottomOf="@id/letter_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/add_cv_button"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/file_path_tv"
        app:layout_constraintTop_toBottomOf="@id/add_cv_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pievienot pieteikumu"
        app:layout_constraintTop_toBottomOf="@id/file_path_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/add_application_button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atcelt"
        app:layout_constraintTop_toBottomOf="@id/add_application_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>